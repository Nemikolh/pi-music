{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "jsx": "react",
        "strict": true,
        "outDir": "build",
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings/"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}